<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:background="@color/app_background_color"

    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/app_background_color"
        tools:context="com.javonharper.familiar.HabitNewActivity">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_spacing"

                android:textColor="@color/app_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/body_text_size"
                android:text="@string/name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/body_text_size"
                android:hint="@string/name_placeholder_text"
                android:layout_marginBottom="@dimen/fieldset_spacing"
                android:inputType="textCapSentences" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/duration_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/body_text_size"
                android:layout_marginBottom="@dimen/app_spacing"
                android:textStyle="bold"
                android:text="@string/duration_label_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/duration_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/body_text_size"
                android:hint="@string/duration_placeholder_text"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/fieldset_spacing"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/times_per_duration_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/body_text_size"
                android:layout_marginBottom="@dimen/app_spacing"

                android:textStyle="bold"
                android:text="Frequency" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/times_per_duration_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/body_text_size"
                android:hint="@string/times_per_duration_placeholder_text"
                android:layout_marginBottom="@dimen/fieldset_spacing"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/days_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/body_text_size"
                android:layout_marginBottom="@dimen/app_spacing"

                android:textStyle="bold"
                android:text="Days of the Week" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/monday_checkbox_label"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Mon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/monday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tuesday_checkbox_label"

                    android:layout_width="fill_parent"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Tues" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/tuesday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:textAlignment="center"
                    android:id="@+id/wednesday_checkbox_label"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Wed" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/wednesday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:id="@+id/thursday_checkbox_label"

                    android:text="Thu" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/thursday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:id="@+id/friday_checkbox_label"

                    android:layout_height="wrap_content"
                    android:text="Fri" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/friday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:textAlignment="center"
                    android:id="@+id/saturday_checkbox_label"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Sat" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/saturday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:id="@+id/sunday_checkbox_label"

                    android:layout_height="wrap_content"
                    android:text="Sun" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/sunday_checkbox"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
