<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:context="com.javonharper.familiar.views.activities.HabitShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_spacing">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/app_spacing"
            android:gravity="center"
            android:text="@string/placeholder"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/app_spacing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/timer_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/duration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/duration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minutes"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/body_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/repeat_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frequency_value"
                    android:text="X"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frequency_label"
                    android:text="@string/times_per_week"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/body_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/app_spacing"
        android:paddingTop="@dimen/app_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habit_current_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="@string/placeholder"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/times_this_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="times this week"
            android:textColor="@color/gray"
            android:textSize="@dimen/body_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_spacing">

        <Button
            android:id="@+id/start_timer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/body_text_size"
            android:layout_marginLeft="@dimen/app_spacing"
            android:layout_marginRight="@dimen/app_spacing"
            android:layout_marginBottom="@dimen/app_spacing"
            android:paddingTop="@dimen/app_spacing"
            android:paddingBottom="@dimen/app_spacing"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="@string/start_timer"
            android:drawableLeft="@drawable/alarm_icon"
            android:paddingLeft="50dp"
            android:drawablePadding="-40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/reset_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yellow_button"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/caption_text_size"
            android:layout_marginLeft="@dimen/app_spacing"
            android:layout_marginRight="@dimen/app_spacing"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="start fresh" />

        <Button
            android:id="@+id/increment_progress_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/caption_text_size"
            android:layout_marginRight="@dimen/app_spacing"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="i just did this" />
    </LinearLayout>
</LinearLayout>
