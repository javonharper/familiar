<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/app_background_color"
    tools:context="com.javonharper.familiar.HabitShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_spacing"

            android:textSize="@dimen/body_text_size"
            android:text="@string/name"
            android:textStyle="bold"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:text="@string/placeholder"
            android:layout_marginBottom="@dimen/fieldset_spacing"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:layout_marginBottom="@dimen/app_spacing"

            android:textStyle="bold"
            android:text="@string/duration_label_text"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/habit_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:text="@string/placeholder"
            android:layout_marginBottom="@dimen/fieldset_spacing"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/times_per_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:layout_marginBottom="@dimen/app_spacing"

            android:textStyle="bold"
            android:text="@string/days_per_week"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/habit_times_per_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:text="@string/placeholder"
            android:layout_marginBottom="@dimen/fieldset_spacing"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/habit_current_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:layout_marginBottom="@dimen/app_spacing"
            android:textStyle="bold"
            android:text="Current Progress"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/habit_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:text="@string/placeholder"
            android:layout_marginBottom="@dimen/fieldset_spacing"
            android:textColor="@color/app_text_color"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/increment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_background_color"
            android:textColor="@color/button_text_color"
            android:layout_margin="@dimen/app_spacing"
            android:textSize="@dimen/body_text_size"
            android:layout_weight="1"
            android:text="@string/mark_task_done"/>
    </LinearLayout>
</LinearLayout>
