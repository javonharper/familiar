<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javonharper.familiar" >

    <uses-permission android:name="android.permission.VIBRATE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.activities.HabitIndexActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.HabitShowActivity"
            android:label="@string/title_activity_habit_show"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.activities.HabitNewActivity"
            android:label="@string/title_activity_habit_new"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".views.activities.HabitEditActivity"
            android:label="@string/title_activity_habit_edit"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".views.activities.HabitTimerActivity"
            android:label="@string/title_activity_habit_timer"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
